<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.rumofuture.rumo.repository.dao.UserDao">

    <resultMap id="userMap" type="com.rumofuture.rumo.model.domain.User">
        <id column="id" property="id"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="name" property="name"/>
        <result column="mobile_phone_number" property="mobilePhoneNumber"/>
        <result column="password" property="password"/>
        <result column="org_id" property="orgId"/>
        <result column="org_code" property="orgCode"/>
        <result column="org_name" property="orgName"/>
    </resultMap>

    <!--保存-->
    <insert id="save" parameterType="user" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO user(name, mobile_phone_number, password)
        VALUES(#{name}, #{mobilePhoneNumber}, #{password})
    </insert>

    <!--更新-->
    <update id="update" parameterType="user">
        UPDATE user
        <set>
            <if test="name != null">name = #{name},</if>
            <if test="password != null">password = #{password},</if>
            <if test="orgId != null">org_id = #{orgId},</if>
            <if test="orgCode != null">org_code = #{orgCode},</if>
            <if test="orgName != null">org_name = #{orgName},</if>
            <if test="updateTime != null">update_time = #{updateTime}</if>
        </set>
        WHERE id = #{id}
    </update>

    <!--查找-->
    <select id="findOne" parameterType="int" resultMap="userMap">
        SELECT * FROM user WHERE id = #{id}
    </select>

    <!--查找-->
    <select id="findByMobilePhoneNumber" parameterType="string" resultMap="userMap">
        SELECT * FROM user WHERE mobile_phone_number = #{mobilePhoneNumber}
    </select>
</mapper>